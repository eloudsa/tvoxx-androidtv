<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.noratek.tvoxx.androidtv">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Touchscreen not required for the App TV application -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <!-- Aapp runs on only TV -->
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:name=".MainApplication_"
        android:allowBackup="true"
        android:icon="@drawable/tvoxx_logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.Leanback">
        <activity
            android:name=".ui.HomeActivity_"
            android:exported="true"
            android:icon="@drawable/tvoxx_logo"
            android:label="@string/app_name"
            android:logo="@drawable/tvoxx_logo"
            android:orientation="vertical"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Leanback.VerticalGrid">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.MainActivity_"
            android:icon="@drawable/tvoxx_logo"
            android:label="@string/app_name"
            android:logo="@drawable/tvoxx_logo"
            android:parentActivityName=".ui.HomeActivity_"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Leanback.Browse" />

        <activity
            android:name=".ui.SpeakerActivity_"
            android:exported="true"
            android:icon="@drawable/tvoxx_logo"
            android:label="@string/app_name"
            android:logo="@drawable/tvoxx_logo"
            android:orientation="vertical"
            android:screenOrientation="landscape"
            android:parentActivityName=".ui.HomeActivity_"
            android:theme="@style/Theme.Leanback.VerticalGrid" />



    </application>

</manifest>